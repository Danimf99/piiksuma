<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXToolbar?>
<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            styleClass="post-container">
    <top>
        <BorderPane>
            <!-- Header with user info -->
            <left>
                <!-- Avatar + User's  name + username -->
                <StackPane>
                    <HBox alignment="CENTER" spacing="10">
                        <!-- Avatar goes here-->
                        <ImageView>
                            <!--TODO: Clip Avatar to make it rounded -->
                            <Image preserveRatio="true" requestedHeight="50" url="/imagenes/huevo.png"/>
                        </ImageView>

                        <VBox alignment="CENTER_LEFT">
                            <Label fx:id="authorName" style="-fx-font-weight: BOLD;"/>
                            <Label fx:id="authorId"/>
                        </VBox>
                    </HBox>
                </StackPane>
            </left>
            <right>
                <!-- Share button -->
                <StackPane>
                    <JFXButton text="der2" styleClass="deck-small-button" ripplerFill="rgba(0, 0, 0, 0.80)">
                        <graphic>
                            <MaterialIconView glyphName="SHARE" size="30"
                                              styleClass="deck-small-button-graphic"/>
                        </graphic>
                    </JFXButton>
                </StackPane>
            </right>
        </BorderPane>
    </top>
    <center>
        <StackPane>
            <VBox alignment="CENTER_LEFT">

                <!-- Multimedia goes here -->
                <!--TODO: Insert Multimedia here-->

                <!-- Atual Post Content -->
                <Label text="Actual Post content goes here" fx:id="postContent" wrapText="true" styleClass="post-text"/>
            </VBox>
        </StackPane>

    </center>
    <bottom>
        <BorderPane>
            <!-- Social button container -->
            <left>
                <HBox alignment="BOTTOM_LEFT">
                    <JFXButton fx:id="buttonLike" styleClass="deck-small-button" ripplerFill="rgba(0, 0, 0, 0.80)">
                        <graphic>
                            <FontAwesomeIconView glyphName="HEART" size="24"
                                                 styleClass="deck-small-button-graphic"/>
                        </graphic>
                    </JFXButton>
                    <JFXButton fx:id="buttonAnswer" styleClass="deck-small-button" ripplerFill="rgba(0, 0, 0, 0.80)">
                        <graphic>
                            <FontAwesomeIconView glyphName="PLUS" size="24"
                                                 styleClass="deck-small-button-graphic"/>
                        </graphic>
                    </JFXButton>
                    <!--This button is for admins, to modify or delete a post-->
                    <JFXButton fx:id="deleteButton" styleClass="deck-small-button" ripplerFill="rgba(0, 0, 0, 0.80)">
                        <graphic>
                            <FontAwesomeIconView glyphName="TRASH" size="24"
                                                 styleClass="deck-small-button-graphic"/>
                        </graphic>
                    </JFXButton>
                </HBox>
            </left>
        </BorderPane>
    </bottom>


</BorderPane>
