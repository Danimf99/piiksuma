<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXToolbar?>
<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            styleClass="post-container"
            style="-fx-padding: 50 30 30 30">
    <top>
        <JFXToolbar>
            <!-- Header with achievement info -->
            <leftItems>
                <!-- Achievement name -->
                <StackPane>
                    <HBox>
                        <VBox>
                            <Label text="Achievement" fx:id="achievementName"/>
                        </VBox>
                    </HBox>
                </StackPane>
            </leftItems>
            <rightItems>
                <!-- Share button -->
                <StackPane>
                    <JFXButton text="der2" styleClass="deck-small-button" ripplerFill="rgba(0, 0, 0, 0.80)">
                        <graphic>
                            <FontAwesomeIconView glyphName="SHARE" size="24"
                                                 styleClass="deck-small-button-graphic"/>
                        </graphic>
                    </JFXButton>
                </StackPane>
            </rightItems>
        </JFXToolbar>
    </top>
    <center>
        <!-- Achievement info -->
        <VBox alignment="CENTER">
            <Label text="Info about achievement" fx:id="achievementDescription" wrapText="true" styleClass="post-text"/>
        </VBox>
    </center>
    <bottom>
        <JFXToolbar>
            <!-- Social button container -->
            <leftItems>
                <HBox>
                    <VBox>
                        <Label text="Unlock date" fx:id="unlockDate"/>
                    </VBox>
                </HBox>
            </leftItems>
        </JFXToolbar>
    </bottom>
</BorderPane>
