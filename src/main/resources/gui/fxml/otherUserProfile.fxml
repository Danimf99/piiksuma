<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>

<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXToolbar?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Line?>
<?import com.jfoenix.controls.JFXMasonryPane?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.text.Text?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"

           prefHeight="400.0" prefWidth="600.0">

    <BorderPane>
        <top>
            <JFXToolbar styleClass="top-toolbar">
            </JFXToolbar>
        </top>
        <bottom>
            <JFXToolbar styleClass="bottom-toolbar"/>
        </bottom>
    </BorderPane>

    <VBox spacing="24">
        <HBox spacing="125">
            <JFXButton fx:id="feedButton" styleClass="jfx-button-border" text="Feed" scaleX="1.25" scaleY="1.25"
                       translateX="10"/>
            <JFXButton fx:id="profileButton" styleClass="jfx-button-border" text="Profile" scaleX="1.25" scaleY="1.25"/>
            <JFXButton fx:id="eventsButton" styleClass="jfx-button-border" text="Events" scaleX="1.25" scaleY="1.25"/>
        </HBox>
        <HBox spacing="125">
            <ImageView>
                <Image preserveRatio="true" requestedHeight="120" url="/imagenes/huevo.png"/>
            </ImageView>
            <Label text="userName" fx:id="userName" wrapText="true" styleClass="post-text" translateY="22.5" scaleX="1.25" scaleY="1.25"/>
        </HBox>
        <Line startX="0" endX="330" translateY="-80" translateX="120"/>
        <HBox spacing="20">
            <JFXButton fx:id="blockButton" styleClass="jfx-button-border" text="Block" translateY="-95"
                       translateX="145"/>
            <JFXButton fx:id="followButton" styleClass="jfx-button-border" text="Follow/Unfollow" translateY="-95"
                       translateX="145"/>
            <JFXButton fx:id="messageButton" styleClass="jfx-button-border" text="Message" translateY="-95"
                       translateX="145"/>
        </HBox>
        <Label text="userDescription" fx:id="description" translateX="10" wrapText="true" styleClass="post-text" translateY="-70"/>
        <Line startX="0" endX="450" translateY="-24"/>

        <ScrollPane fx:id="postScrollPane" vbarPolicy="NEVER" hbarPolicy="NEVER" styleClass="main-content" translateY="10">
            <JFXMasonryPane fx:id="postMasonryPane" VSpacing="10" styleClass="main-masonry" translateY="10">
            </JFXMasonryPane>
        </ScrollPane>
    </VBox>

</StackPane>
