        </bottom>
    </BorderPane>

    <VBox spacing="24">
        <HBox spacing="125">
            <JFXButton fx:id="feedButton" styleClass="jfx-button-border" text="Feed" scaleX="1.25" scaleY="1.25" translateX="15"/>
            <JFXButton fx:id="profileButton" styleClass="jfx-button-border" text="Profile" scaleX="1.25" scaleY="1.25" translateX="7.5"/>
