<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXToolbar?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Line?>
<?import com.jfoenix.controls.JFXMasonryPane?>
<?import javafx.geometry.Insets?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="piiksuma.gui.UserProfileController"
           prefHeight="400.0" prefWidth="600.0">
    <BorderPane>
        <top>
            <JFXToolbar styleClass="top-toolbar">
            </JFXToolbar>
        </top>
        <bottom>
            <JFXToolbar styleClass="bottom-toolbar"/>
        </bottom>
    </BorderPane>

    <VBox spacing="24">
        <HBox spacing="125">
            <JFXButton fx:id="feedButton" styleClass="jfx-button-border" text="Feed" scaleX="1.25" scaleY="1.25" translateX="65"/>

            <JFXButton fx:id="archivedPostssButton" styleClass="jfx-button-border" text="Show Archived Posts" scaleX="1.25" scaleY="1.25" translateX="50"/>


        </HBox>
        <HBox spacing="125">
            <ImageView>
                <Image preserveRatio="true"  requestedHeight="120" url="/imagenes/huevo.png"/>
            </ImageView>
            <Label text="userName" translateY="22.5" scaleX="1.25" scaleY="1.25"/>
        </HBox>
        <Line startX="0" endX="330" translateY="-80" translateX="120"/>
        <HBox spacing="20">
            <JFXButton fx:id="ticketsButton" styleClass="jfx-button-border" text="Show Tickets" translateY="-95" translateX="227.5"/>
            <JFXButton fx:id="newticketButton" styleClass="jfx-button-border" text="New Ticket" translateY="-95" translateX="227.5"/>
        </HBox>
        <Label text="userDescription" translateX="10" translateY="-70"/>
        <Line startX="0" endX="450" translateY="-24"/>
        <Label alignment="CENTER" text="USER POSTS" translateX="175" scaleX="1.5" scaleY="1.5"/>
        <ScrollPane fx:id="postScrollPane" hbarPolicy="NEVER">
            <JFXMasonryPane fx:id="searchMasonryPane" HSpacing="100" VSpacing="100">
                <padding>
                    <Insets top="16" right="20" bottom="16" left="16"/>
                </padding>
            </JFXMasonryPane>
        </ScrollPane>
    </VBox>

</StackPane>
