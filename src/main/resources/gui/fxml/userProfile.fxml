            <Label text="userName" translateY="32.5" scaleX="1.25" scaleY="1.25"/>
        </HBox>
        <Line startX="0" endX="450" translateY="-24" />
        <HBox>
            <JFXButton fx:id="ticketsButton" styleClass="jfx-button-border" text="Show Tickets" translateY="-40" translateX="325"/>
            <JFXButton fx:id="newticketButton" styleClass="jfx-button-border" text="New Ticket" translateY="-10" translateX="227.5"/>
        </HBox>
        <Label text="userDescription" translateX="10" translateY="-70"/>
        <Line startX="0" endX="450" translateY="-24"/>
