<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.text.Text?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="piiksuma.gui.NewTicketController"
           prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="50">
        <StackPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </StackPane.margin>
        <HBox spacing="50">
            <Text text="Section:" translateX="20" translateY="10"/>
            <JFXTextField fx:id="issue"/>
        </HBox>
        <HBox spacing="50">
            <Text text="Issue:" translateX="20" translateY="5"/>
            <JFXTextArea fx:id="description"/>
        </HBox>
        <JFXButton fx:id="sendButton" text="Send" styleClass="jfx-button-border" alignment="BOTTOM_CENTER" translateX="150"/>
    </VBox>

</StackPane>
